@model ShopKhanh.Web.Models.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/Layouts.cshtml";
}

<div class="main">
<div class="container">
    <div class="checkout">
        <div class="row">
            <div class="col-sm-9">
                <div class="checkout-step">
                    <div class="checkout-step-item">
                      
                        <div id="checkout-one" class="collapse in">
                            <div class="step-content">
                                <div class="row">
                                   @using (Html.BeginForm("Login", "Account", new { returnUrl = @ViewBag.ReturnUrl }, FormMethod.Post))
                                   {
                                        <div class="col-sm-6">
                                            <h4>Đăng nhập</h4>
                                            <div class="line2 mtb20"></div>
                                            <div class="form-group">
                                                <label class="control-label">Nếu bạn chưa có tài khoản vui lòng đăng ký tại link dưới đây</label>
                                                <a class="text-muted" href="/dang-ky.html">Đăng ký thành viên</a>
                                            </div>
                                           
                                            <div class="form-group">
                                                <label class="control-label">Tài khoản *</label>
                                                @Html.TextBoxFor(model => model.UserName, new { @class = "form-control" })
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label">Mật khẩu*</label>
                                                @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label">Nhớ mật  khẩu*</label>
                                                @Html.CheckBoxFor(model => model.RememberMe)
                                            
                                            </div>
                                            <p><a href="#">Forgot your password?</a></p>
                                            <div class="form-group">
                                                <input type="submit" class="btn btn-danger btn-md btn-login fwb" value="Đăng nhập"/>
                                            </div>
                                        </div>
                                    }
                             
                                </div>
                            </div>
                        </div>
                    </div>
                
            
               
                 
                </div>
            </div>
        
        </div>
    </div>
</div>
        </div>
