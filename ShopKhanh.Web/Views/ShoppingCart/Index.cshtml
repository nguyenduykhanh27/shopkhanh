<div class="main">
    <h3>Giỏ hàng</h3>
    <div class="container" id="cartContent">
    
        <div class="cart" >
         
           <div class="table-responsive" >
                <table class="table custom-table">
                    <thead>
                        <tr class="first last">
                            <th>STT</th>
                            <th>Tên sản phẩm</th>
                            <th>Hình ảnh</th>
                            <th>Giá</th>
                            <th>Số lượng</th>
                            <th>Thành tiền</th>
                            <th>Xóa bỏ</th>

                        </tr>
                    </thead>
                    <tbody id="cartBody"></tbody>
                </table>
                <div class="text-right">
                    <a href="#" class="btn btn-warning btn-md" id="btnContinue">TIẾP TỤC MUA HÀNG</a>
                    <button type="submit" class="btn btn-danger btn-md" id="btnDeleteAll">XÓA GIỎ HÀNG</button>
                    <button type="submit" class="btn btn-success btn-md" id="btnCheckout">THANH TOÁN</button>
                </div>
                <div class="pull-right">
                    Tổng tiền:<span id="lblTotalOrder">VNĐ</span>
                </div>
               
            </div>
        </div>
        <div id="divCheckout" style="display:none;">
            <form method="post" id="frmPayment">
                <div class="row">
                    <h3>Thanh toán</h3>
                    <div class="col-sm-6">
                        <div class="form-group">
                          @if (Request.IsAuthenticated)
                          {
                            <label>
                                <input type="checkbox" id="chkUserLoginInfo" />
                                Sử dụng thông tin đăng nhập
                            </label>
                          }
                        </div>
                    </div>
                  
                    <div class="col-sm-6">
                        <div class="form-group">
                            <input type="text" class="form-control input-md" id="txtName" placeholder="Họ tên" name="name">
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <input type="text" class="form-control input-md" id="txtAddress" placeholder="Địa chỉ" name="address">
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <input type="text" class="form-control input-md" id="txtEmail" placeholder="Email" name="email">
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <input type="text" class="form-control input-md" id="txtPhone" placeholder="Điện thoại" name="phone">
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <textarea class="form-control" placeholder="Tin nhắn" rows="5" id="txtMessage" name="messages"></textarea>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="pull-right">
                            <input type="button" class="btn btn-primary btn-lg" id="btnCreateOrder" value="Thanh toán" />
                        </div>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>
<script id="tplCart" type="x-tmpl-mustache">
    <tr>
        <td>{{ProductId}}</td>
        <td>{{ProductName}}</td>
        <td><img src="{{Image}}" height="150" /></td>
        <td>{{PriceF}}</td>
        <td><input type="number" data-id="{{ProductId}}" data-price="{{Price}}" value="{{Quantity}}" class="input txtQuantity" /></td>
        <td id="amount_{{ProductId}}">{{Amount}}</td>
        <td><button class="btn btn-danger btnDeleteItem" data-id="{{ProductId}}"><i class="fa fa-close"></i></button></td>
    </tr>

</script>
